<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/coach_bg"
    android:layout_height="match_parent"
    tools:context=".activity.AddAddressActivity">
    <com.example.edive.design.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:canBack="true"
        app:backImage="@mipmap/icon_back"
        app:titleText="新增收货地址"
        />
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/coach_bg"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="@dimen/dp_16"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="收货人"
                android:textSize="@dimen/sp_14"
                />
            <EditText
                android:id="@+id/et_name"
                android:layout_marginLeft="@dimen/dp_39"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_name"
                android:background="@null"
                android:maxLength="8"
                android:textColor="@color/white"
                android:textColorHint="@color/hints"
                android:textSize="@dimen/sp_14"
                android:hint="请填写您的姓名"
                />
        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/hint_coach"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="@dimen/dp_16"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="手机号码"
                android:textSize="@dimen/sp_14"
                />
            <EditText
                android:id="@+id/et_phone"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_toRightOf="@id/tv_phone"
                android:background="@null"
                android:maxLength="11"
                android:textColorHint="@color/hints"
                android:textSize="@dimen/sp_14"
                android:hint="请填写您的手机号"
                />
        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/hint_coach"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="@dimen/dp_16"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="所在地区"
                android:textSize="@dimen/sp_14"
                />
            <EditText
                android:id="@+id/et_location"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_area"
                android:background="@null"
                android:textColor="@color/white"
                android:textColorHint="@color/hints"
                android:textSize="@dimen/sp_14"
                android:hint="请选择"
                />
            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/icon_more"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/hint_coach"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="@dimen/dp_16"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="详细地址"
                android:textSize="@dimen/sp_14"
                />
            <EditText
                android:id="@+id/et_address"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_toRightOf="@id/tv_address"
                android:background="@null"
                android:maxLength="50"
                android:textColor="@color/white"
                android:gravity="top"
                android:textColorHint="@color/hints"
                android:textSize="@dimen/sp_14"
                android:hint="请选择"
                />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:padding="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@drawable/coach_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设为默认地址"
            android:textColor="@color/white"
            />
        <Switch
            android:id="@+id/swich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <Button
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_180"
        android:id="@+id/bt_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@drawable/shape"
        android:text="保存"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        />
</LinearLayout>