<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/Setting_bg"
    tools:context=".activity.ApplyRefundActivity">
    <com.example.edive.design.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="申请退款"
        app:backImage="@mipmap/icon_back"
        app:canBack="true"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="match_parent"
            android:background="@drawable/diving_bg_s"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_height="@dimen/dp_100">
            <TextView
                android:id="@+id/tv_order_num"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/hint"
                android:layout_alignParentBottom="true"
                android:text="111111111"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_show"
                android:layout_width="@dimen/dp_85"
                android:src="@mipmap/bg"
                android:scaleType="centerCrop"
                android:layout_height="@dimen/dp_85" />
            <com.example.edive.design.RoundOrCircleImage
                android:id="@+id/iv_co_show"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/bg"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/iv_show"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_co_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_co_show"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/tv_co_dj"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="V3"
                android:layout_toRightOf="@id/tv_co_name"
                android:background="@drawable/person_inter_bg"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_12"
                android:layout_marginLeft="@dimen/dp_5"
                />

            <TextView
                android:id="@+id/tv_picse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_show"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp_11"
                android:text="11111111111"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_show"
                android:layout_alignBottom="@id/iv_show"
                android:layout_toLeftOf="@id/tv_picse"
                android:layout_marginRight="@dimen/dp_20"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:layout_marginLeft="@dimen/dp_10"
                android:maxLines="1"
                android:text="巴厘岛三日潜，带您畅玩"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/diving_bg_s"
            android:orientation="vertical"
            android:layout_below="@id/ll"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:padding="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款原因"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/tv_pay_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hint"
                    android:textSize="@dimen/sp_13"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="@dimen/dp_5"
                    android:drawableRight="@mipmap/icon_more2"
                    android:text="请选择"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:padding="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_tk_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款说明:"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/white"
                    />
                <EditText
                    android:id="@+id/tv_pay_other"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hint"
                    android:textSize="@dimen/sp_13"
                    android:layout_toRightOf="@id/tv_tk_text"
                    android:background="@null"
                    android:hint="选填"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:padding="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_appayphoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传照片 （限3张）"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/white"
                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rec"
                    android:layout_width="match_parent"
                    android:layout_below="@id/tv_appayphoto"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/diving_bg_s"
            android:orientation="vertical"
            android:layout_below="@id/rl2"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:padding="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_tkje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款金额:"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/tv_pisce_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sp_13"
                    android:text="￥4500"
                    android:layout_toRightOf="@id/tv_tkje"
                    android:layout_marginLeft="@dimen/dp_30"
                    />
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_ok"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@drawable/divelog_shape_bg_tk"
            android:layout_height="@dimen/dp_44">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="提交"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>