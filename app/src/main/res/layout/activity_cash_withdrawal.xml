<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/Setting_bg"
    android:layout_height="match_parent"
    tools:context=".activity.CashWithdrawalActivity">
    <com.example.edive.design.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="提现"
        app:backImage="@mipmap/icon_back"
        app:canBack="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="vertical"
        android:background="@drawable/coach_bg"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现金额"
                android:textColor="@color/white"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_36"
                    android:text="￥"
                    />
                <EditText
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_centerHorizontal="true"
                    android:layout_toRightOf="@id/tv_money"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_36"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/hint"
                />
            <RelativeLayout
                android:layout_marginBottom="@dimen/dp_21"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_money_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/hint_cashwithdrawal"
                android:text="当前余额2000元，"
                />
                <TextView
                    android:id="@+id/tv_money_cash_withdrawal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/blue"
                    android:text="全部提现"
                    android:layout_toRightOf="@id/tv_money_show"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/coach_bg"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="到此账户"
                android:textSize="@dimen/sp_14"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_weight="1"
                android:background="@drawable/select_main_cash"
                android:layout_width="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:layout_height="@dimen/dp_50">
                <ImageView
                    android:id="@+id/iv_wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_wechats"
                    />
                <TextView
                    android:layout_marginLeft="@dimen/dp_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_wechat"
                    android:text=" 微  信"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_weight="1"
                android:background="@drawable/select_main_cash"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="@dimen/dp_50">
                <ImageView
                    android:id="@+id/iv_zfbs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_zfbs"
                    />
                <TextView
                    android:layout_marginLeft="@dimen/dp_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_zfbs"
                    android:text="支付宝"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/findpass_getcode_shape_bg"
        android:text="提现"
        android:textColor="@color/white"
        />
</LinearLayout>