<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/Setting_bg"
    android:layout_height="match_parent"
    tools:context=".activity.ConfirmationOrderActivity">
    <com.example.edive.design.CommonTitle
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:canBack="true"
        app:backImage="@mipmap/icon_back"
        app:titleText="确认订单"
        />
    <android.support.v7.widget.CardView
        android:layout_below="@id/title"
        android:id="@+id/cardno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/findpassword_bg"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true"
        android:visibility="visible"
        app:cardCornerRadius="@dimen/dp_5"
        >
        <RelativeLayout
            android:id="@+id/rl_addaress_no"
            android:padding="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/bt_addaress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:text="添加收货地址"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_below="@id/title"
        android:id="@+id/card1"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/findpassword_bg"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/dp_5"
        >
        <RelativeLayout
            android:id="@+id/rl_addaress"
            android:padding="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:id="@+id/iv_weizhi"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/icon_weizhi"
                />
            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_weizhi"
                android:text="黎门"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                />
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_name"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/hint"
                android:text="15609563858"
                android:layout_marginLeft="@dimen/dp_10"
                />
            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_more3"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_loacte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_toRightOf="@id/iv_weizhi"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toLeftOf="@id/iv_more"
                android:textColor="@color/white"
                android:text="北京市海淀区马甸街道金澳国际写字楼1单元28层2804室"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card2"
        android:layout_below="@id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_5"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/findpassword_bg"
        >
        <RelativeLayout
            android:padding="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_show"
                    android:layout_width="@dimen/dp_90"
                    android:layout_height="@dimen/dp_90"
                    android:src="@mipmap/bg"
                    android:scaleType="centerCrop"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_text"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_13"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="TUO浮潜三宝潜水镜全干式呼吸管套装防雾近视..."
                    android:layout_toRightOf="@id/iv_show"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <TextView
                    android:id="@+id/tv_num_guige"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="库存 509"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@id/iv_show"
                    android:textColor="@color/hint"
                    android:layout_below="@id/tv_text"
                    android:layout_marginTop="@dimen/dp_5"
                    />
                <TextView
                    android:id="@+id/tv_integral_kucun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@id/iv_show"
                    android:layout_alignBottom="@id/iv_show"
                    android:text="￥230.00"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@id/rl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所需积分："
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_14"
                    />
                <TextView
                    android:id="@+id/tv_integralsss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_s"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    />
                <ImageView
                    android:id="@+id/iv_jia"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@mipmap/icon_jia"
                    />
                <TextView
                    android:id="@+id/tv_num_nums"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/integral_inter_bg"
                    android:drawablePadding="@dimen/dp_12"
                    android:layout_toLeftOf="@id/iv_jia"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />
                <ImageView
                    android:id="@+id/iv_jian"
                    android:layout_width="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:layout_height="15dp"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_toLeftOf="@id/tv_num_nums"
                    android:src="@mipmap/icon_jian"
                    />

            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/bt_ok"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_36"
            android:layout_alignParentRight="true"
            android:text="提交订单"
            android:background="@drawable/divelog_shape_bg_gm"
            android:textColor="@color/white"
            />
    </RelativeLayout>
</LinearLayout>