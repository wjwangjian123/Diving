<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/Setting_bg"
    android:layout_height="match_parent"
    tools:context=".activity.DivingCertificateActivity">
    <com.example.edive.design.CommonTitle
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backImage="@mipmap/icon_back"
        app:canBack="true"
        app:titleText="潜水证书"
        app:moreImg="@mipmap/icon_share"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:padding="@dimen/dp_10"
            android:layout_width="match_parent"
            android:background="@drawable/divelog_shape_bg"
            android:layout_height="@dimen/dp_44">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="区域选择"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_marginRight="@dimen/dp_10"
                android:id="@+id/tv_loction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:drawableRight="@mipmap/icon_more"
                android:drawablePadding="@dimen/dp_5"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_220"
                android:src="@mipmap/bg"
                android:scaleType="centerCrop"
                android:layout_marginLeft="@dimen/dp_120"
                android:alpha="0.3"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/iv_show"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_40"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_190"
                android:src="@mipmap/bg"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/tv_name"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_22"
                android:textColor="@color/white"
                android:text="OW潜水考证"
                />
            <TextView
                android:id="@+id/tv_en_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:layout_below="@id/tv_name"
                android:layout_marginLeft="@dimen/dp_30"
                />
            <ImageView
                android:id="@+id/iv_qianshui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_qianshui"
                android:layout_alignBottom="@id/iv_show"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_25"
                />
            <TextView
                android:id="@+id/tv_text"
                android:layout_width="@dimen/dp_173"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_qianshui"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/white"
                android:layout_alignBottom="@id/iv_qianshui"
                android:textSize="@dimen/sp_13"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_next"
                android:layout_toRightOf="@id/tv_text"
                android:layout_alignBottom="@id/tv_text"
                android:layout_marginLeft="@dimen/dp_85"
                />
        </RelativeLayout>
        <TextView
            android:padding="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择教练"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rec"
            android:padding="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160"/>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@drawable/diving_bg_s"

            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="基本信息"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_jbxx"
                    android:layout_width="@dimen/dp_260"
                    android:padding="@dimen/dp_10"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_13"
                    android:text="OW考证-开放水域潜水员课程"
                    />
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥2300"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/dp_10"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_lengthplay"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hint"
                    android:textSize="@dimen/sp_13"
                    android:text="4天3晚"
                    />
                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="薄荷岛XXX地"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/hint"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/dp_10"
                    />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@drawable/diving_bg_s"

            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="费用包含"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    />
            </RelativeLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/tv_coastincludes"
                   android:padding="@dimen/dp_10"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="1.OW考证-开放水域潜水员课程

2.OW考证-开放水域潜水员课程
3.....
                        "
                   android:textColor="@color/white"

                   />
           </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@drawable/diving_bg_s"

            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="费用不含"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_costNotIncludes"
                    android:padding="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.OW考证-开放水域潜水员课程

2.OW考证-开放水域潜水员课程
3.....
                        "
                    android:textColor="@color/white"

                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@drawable/diving_bg_s"

            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="行程安排"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    />
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:id="@+id/rec_xcap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_30"
            android:background="@color/findpassword_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/dp_18"
                android:id="@+id/tv_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_12"
                />
            <Button
                android:layout_marginRight="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginBottom="@dimen/dp_7"
                android:id="@+id/bt_gm"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_36"
                android:text="购买"
                android:textColor="@color/white"
                android:background="@drawable/divelog_shape_bg_gm"
                />
            <Button
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginBottom="@dimen/dp_7"
                android:id="@+id/bt_zx"
                android:layout_toLeftOf="@id/bt_gm"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_36"
                android:text="咨询"
                android:textColor="@color/blue"
                android:background="@drawable/diving_certif_bgbutton"
                />
        </RelativeLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>