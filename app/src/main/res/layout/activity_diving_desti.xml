<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Setting_bg"
    android:orientation="vertical"
    tools:context=".activity.DivingDestiActivity">
    <RelativeLayout
        android:background="@color/findpassword_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/icon_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/icon_share"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详情"
                android:layout_centerVertical="true"

                android:layout_toRightOf="@id/iv_back"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                />
            <TextView
                android:id="@+id/tv_Message"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"
                android:text="评价"
                />
        </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <com.youth.banner.Banner
                android:id="@+id/rec"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_340"/>
            <RelativeLayout
                android:padding="@dimen/dp_17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="@dimen/dp_67"
                    android:id="@+id/tv_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    android:text=""
                    />
                <TextView
                    android:id="@+id/tv_picse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sp_12"
                    android:layout_alignParentRight="true"
                    android:text=""
                    />
                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_text"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/hint"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text=""
                    />
                <TextView
                    android:layout_marginLeft="@dimen/dp_20"
                    android:id="@+id/tv_lengthPlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_text"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/hint"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_toRightOf="@id/tv_location"
                    android:text=""
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@drawable/diving_bg_s"

                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_jjjj"
                        android:padding="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="教练简介"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16"
                        />
                    <com.example.edive.design.RoundOrCircleImage
                        android:id="@+id/iv_co_pic"
                        android:padding="@dimen/dp_10"
                        android:layout_width="@dimen/dp_20"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_jjjj"
                        android:layout_height="@dimen/dp_20"
                        android:src="@mipmap/bg"
                        />
                    <TextView
                        android:layout_marginLeft="@dimen/dp_10"
                        android:id="@+id/tv_co_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_11"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/iv_co_pic"
                        android:text="蕾蕾"
                        />
                    <TextView
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="-5dp"
                        android:id="@+id/tv_co_dj"
                        android:paddingLeft="@dimen/dp_8"
                        android:paddingRight="@dimen/dp_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="V3"
                        android:layout_toRightOf="@id/tv_co_name"
                        android:background="@drawable/person_inter_bg"
                        android:textSize="@dimen/sp_10"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_co_text"
                        android:layout_width="match_parent"
                        android:padding="@dimen/dp_10"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_13"
                        android:text="OW考证-开放水域潜水员课程"
                        />
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@drawable/diving_bg_s"

                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:padding="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="时间节点"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16"
                        />

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:padding="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_13"
                        android:text="开始时间"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:id="@+id/tv_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:textSize="@dimen/sp_13"
                        android:text=""
                        android:textColor="@color/hint"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:padding="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="结束时间"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:id="@+id/tv_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/hint"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@drawable/diving_bg_s"

                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:padding="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="费用包含"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_coastincludes"
                        android:padding="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1.OW考证-开放水域潜水员课程

2.OW考证-开放水域潜水员课程
3.....
                        "
                        android:textColor="@color/white"

                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@drawable/diving_bg_s"

                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:padding="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="费用不含"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_costNotIncludes"
                        android:padding="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1.OW考证-开放水域潜水员课程

2.OW考证-开放水域潜水员课程
3.....
                        "
                        android:textColor="@color/white"

                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@drawable/diving_bg_s"

                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:padding="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="行程安排"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16"
                        />
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:id="@+id/rec_xcap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/dp_30"
                android:background="@color/findpassword_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="@dimen/dp_18"
                    android:id="@+id/tv_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_12"
                    />
                <Button
                    android:layout_marginRight="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_7"
                    android:layout_marginBottom="@dimen/dp_7"
                    android:id="@+id/bt_gm"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_36"
                    android:text="购买"
                    android:textColor="@color/white"
                    android:background="@drawable/divelog_shape_bg_gm"
                    />
                <Button
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_7"
                    android:layout_marginBottom="@dimen/dp_7"
                    android:id="@+id/bt_zx"
                    android:layout_toLeftOf="@id/bt_gm"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_36"
                    android:text="咨询"
                    android:textColor="@color/blue"
                    android:background="@drawable/diving_certif_bgbutton"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    
    
    
</LinearLayout>