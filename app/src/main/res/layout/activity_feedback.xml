<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/Setting_bg"
    tools:context=".activity.FeedbackActivity">
    <com.example.edive.design.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:canBack="true"
        app:backImage="@mipmap/icon_back"
        app:titleText="关于我们"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_about"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_90"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="当前版本1.0"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_gravity="center"
        />
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_alignParentBottom="true"
           android:orientation="vertical"
           android:gravity="center"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/tv_a"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/hint_de"
               android:text="Copyright2018-2019 XXX"
               android:layout_marginBottom="@dimen/dp_20"
               android:layout_above="@id/tv_a"
               />
           <TextView
               android:id="@+id/tv_b"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/hint_de"
               android:layout_marginBottom="@dimen/dp_30"
               android:text="All Rights Reserved"
               />
       </LinearLayout>

   </RelativeLayout>
</LinearLayout>