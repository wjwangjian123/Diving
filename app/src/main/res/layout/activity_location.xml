<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/Setting_bg"
    android:layout_height="match_parent"
    tools:context=".activity.LocationActivity">
    <RelativeLayout
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:background="@color/findpassword_bg"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/icon_back"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:text="所在位置"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:id="@+id/bt_ok"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_23"
            android:textColor="@color/white"
            android:text="完成"
            android:layout_alignParentRight="true"
            android:background="@drawable/pubsih_shape_bg"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/srech_bg"
    android:layout_width="match_parent"
        android:orientation="horizontal"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_marginLeft="@dimen/dp_15"
        android:padding="@dimen/dp_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_search"
        />
        <EditText
            android:id="@+id/et_search_data"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:background="@null"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:hint="搜索附近的位置"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            />
</LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="@dimen/dp_15"
            android:id="@+id/rec"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</LinearLayout>