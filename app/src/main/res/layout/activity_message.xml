<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/Setting_bg"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.MessageActivity">
    <com.example.edive.design.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:canBack="true"
        app:backImage="@mipmap/icon_back"
        app:titleText="消息"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:padding="@dimen/dp_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_dianzan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:gravity="center"
                android:text="点赞"
                android:drawableTop="@mipmap/icon_dianzan"
                />
            <TextView
                android:id="@+id/tv_pinglun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:gravity="center"
                android:text="评论"
                android:drawableTop="@mipmap/icon_pinglun"
                />
            <TextView
                android:id="@+id/tv_system"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:gravity="center"
                android:text="系统"
                android:drawableTop="@mipmap/icon_xitong"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/yuan_pl"
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_192"
            android:layout_marginTop="@dimen/dp_28"
            android:visibility="gone"
            android:background="@drawable/yuan"
            />
        <TextView
            android:id="@+id/yuan_like"
            android:layout_width="@dimen/dp_6"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_28"
            android:layout_height="@dimen/dp_6"
            android:background="@drawable/yuan"
            />
        <TextView
            android:id="@+id/yuan_system"
            android:layout_width="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_28"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/dp_306"
            android:layout_height="@dimen/dp_6"
            android:background="@drawable/yuan"
            />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>