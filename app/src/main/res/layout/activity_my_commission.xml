<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/Setting_bg"
    android:layout_height="match_parent"
    tools:context=".activity.MyCommissionActivity">
    <com.example.edive.design.CommonTitle
        android:id="@+id/titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="我的返佣"
        app:backImage="@mipmap/icon_back"
        app:canBack="true"
        app:moreText="我的下级"
        />
    <RelativeLayout
        android:background="@mipmap/icon_myint_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_167">
        <TextView
            android:id="@+id/tv_commission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_32"
            android:text="23908"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_45"
            />
        <TextView
            android:layout_below="@id/tv_commission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="累积返佣总额"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:text="返利明细"
            />
        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_more"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_marginRight="@dimen/dp_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            android:text="2019年10月1日"
            android:layout_toLeftOf="@id/iv_more"
            />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/dp_15"
        android:id="@+id/rec"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>