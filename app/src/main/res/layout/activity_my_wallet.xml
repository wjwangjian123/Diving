<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Setting_bg"
    tools:context=".activity.MyWalletActivity">
    <com.example.edive.design.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:canBack="true"
        app:backImage="@mipmap/icon_back"
        app:titleText="我的钱包"
        />
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:background="@drawable/wallet_bg"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="33sp"
            android:text="1000.00"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/tv_yuan"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:layout_below="@id/tv_money"
            android:text="总金额 （元）"
            />
        <Button
            android:id="@+id/bt_expressive"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="80dp"
            android:layout_height="@dimen/dp_30"
            android:text="提现"
            android:background="@drawable/shape_money_button"
            android:textColor="@color/moenys"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_yuan"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/wallet_money_bg"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="@dimen/dp_19"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/wallet_textview"
                android:text="总收入 （元）"
                android:textSize="@dimen/sp_14"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/wallet_textview"
                android:text="总支出 （元）"
                android:textSize="@dimen/sp_14"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_20"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1650.00"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_19" />
            <TextView
                android:id="@+id/tv_expenditure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="123.00"
                android:textSize="@dimen/sp_19"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全部记录"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>