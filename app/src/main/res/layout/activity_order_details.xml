<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/Setting_bg"
    android:layout_height="match_parent"
    tools:context=".activity.OrderDetailsActivity">
    <com.example.edive.design.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:canBack="true"
        app:backImage="@mipmap/icon_back"
        app:titleText="订单详情"
        />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@mipmap/icon_bg_order"
                android:layout_height="wrap_content">

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_1"
                android:layout_margin="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_tk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_tk"
                    />
                <TextView
                    android:id="@+id/tv_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_toRightOf="@id/iv_tk"
                    android:text=""
                    />
                <TextView
                    android:id="@+id/tv_Destials"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_13"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text=""
                    />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_width="match_parent"
                android:background="@drawable/diving_bg_s"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_below="@id/rl_1"
                android:layout_height="@dimen/dp_85">

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_below="@id/rl_1"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_show"
                    android:layout_width="@dimen/dp_85"
                    android:src="@mipmap/bg"
                    android:scaleType="centerCrop"
                    android:layout_height="@dimen/dp_85" />
                <com.example.edive.design.RoundOrCircleImage
                    android:id="@+id/iv_co_show"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/bg"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@id/iv_show"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_co_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_co_show"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/tv_co_dj"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="V3"
                    android:layout_toRightOf="@id/tv_co_name"
                    android:background="@drawable/person_inter_bg"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginLeft="@dimen/dp_5"
                    />
                <TextView
                    android:id="@+id/tv_picse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv_show"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/sp_11"
                    android:text=""
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/tv_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_show"
                    android:layout_alignBottom="@id/iv_show"
                    android:layout_toLeftOf="@id/tv_picse"
                    android:layout_marginRight="@dimen/dp_20"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:maxLines="1"
                    android:text=""
                    />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/diving_bg_s"
                android:orientation="vertical"
                android:layout_below="@id/ll"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="@dimen/dp_10"
                    android:id="@+id/rl_baoming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:id="@+id/viewt"
                        android:layout_width="@dimen/dp_2"
                        android:layout_centerVertical="true"
                        android:layout_height="@dimen/sp_12"
                        android:background="@drawable/divelog_shape_bg"/>
                    <TextView
                        android:layout_marginLeft="@dimen/dp_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单信息"
                        android:textColor="@color/white"
                        android:layout_toRightOf="@id/viewt"
                        android:textSize="@dimen/sp_14"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:padding="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单编号"
                        android:textSize="@dimen/sp_13"
                        android:textColor="#EEEEEE"
                        />
                    <TextView
                        android:id="@+id/tv_order_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_13"
                        android:layout_alignParentRight="true"
                        android:text=""
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:padding="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="付款金额"
                        android:textSize="@dimen/sp_13"
                        android:textColor="#EEEEEE"
                        />
                    <TextView
                        android:id="@+id/tv_pay_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_13"
                        android:layout_alignParentRight="true"
                        android:text=""
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:padding="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付方式"
                        android:textSize="@dimen/sp_13"
                        android:textColor="#EEEEEE"
                        />
                    <TextView
                        android:id="@+id/tv_pay_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_13"
                        android:layout_alignParentRight="true"
                        android:text=""
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:padding="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付时间"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:id="@+id/tv_pay_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_13"
                        android:layout_alignParentRight="true"
                        android:text="￥4500"
                        />
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/diving_bg_s"
                android:orientation="vertical"
                android:layout_below="@id/rl2"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="产品总额"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:id="@+id/tv_picse_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_13"
                        android:layout_alignParentRight="true"
                        android:text=""
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:padding="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积分抵扣"
                        android:textSize="@dimen/sp_13"
                        android:textColor="#EEEEEE"
                        />
                    <TextView
                        android:id="@+id/tv_integral_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_13"
                        android:layout_alignParentRight="true"
                        android:text=""
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:padding="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="实付金额"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:id="@+id/tv_pisce_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/sp_13"
                        android:layout_alignParentRight="true"
                        android:text=""
                        />
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_tk"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:background="@color/findpassword_bg"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/bt_ok"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_36"
                    android:layout_alignParentRight="true"
                    android:text="退款进度"
                    android:background="@drawable/divelog_shape_bg_gm"
                    android:textColor="@color/white"
                    />
            </RelativeLayout>

        </RelativeLayout>
</LinearLayout>