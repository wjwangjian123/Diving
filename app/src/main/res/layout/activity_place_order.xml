<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/Setting_bg"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.PlaceOrderActivity">
    <com.example.edive.design.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="提交订单"
        app:backImage="@mipmap/icon_back"
        app:canBack="true"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_item"
            android:background="@drawable/diving_bg_s"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90">

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_show"
                android:layout_width="@dimen/dp_85"
                android:src="@mipmap/bg"
                android:layout_height="@dimen/dp_85" />
            <com.example.edive.design.RoundOrCircleImage
                android:id="@+id/iv_co_show"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/bg"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/iv_show"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_co_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_co_show"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/tv_co_dj"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="V3"
                android:layout_toRightOf="@id/tv_co_name"
                android:background="@drawable/person_inter_bg"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_12"
                android:layout_marginLeft="@dimen/dp_5"
                />
            <TextView
                android:id="@+id/tv_im"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系他"
                android:textColor="@color/blue"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_12"
                />
            <TextView
                android:id="@+id/tv_picse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_show"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp_12"
                android:text=""
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_show"
                android:layout_alignBottom="@id/iv_show"
                android:layout_toLeftOf="@id/tv_picse"
                android:layout_marginRight="@dimen/dp_20"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:layout_marginLeft="@dimen/dp_10"
                android:maxLines="1"
                android:text=""
                />
        </RelativeLayout>
        <!--<RelativeLayout-->
            <!--android:id="@+id/rl_one"-->
            <!--android:layout_marginTop="@dimen/dp_10"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_marginLeft="@dimen/dp_30"-->
            <!--android:layout_marginRight="@dimen/dp_30"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@id/rl"-->
            <!--&gt;-->
            <!--<TextView-->
                <!--android:id="@+id/tv_order_num"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textColor="@color/hint"-->
                <!--android:textSize="@dimen/sp_12"-->
                <!--/>-->
        <!--</RelativeLayout>-->
        <RelativeLayout
            android:layout_margin="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_below="@id/rl_item"
            android:background="@drawable/diving_bg_s"
            android:padding="@dimen/dp_10"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_jf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_jifen_s"
                />
            <TextView
                android:id="@+id/tv_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可用1000积分抵扣10元"
                android:layout_toRightOf="@id/iv_jf"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                />
            <CheckBox
                android:id="@+id/chek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <Button
            android:id="@+id/bt_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15"
            android:text="提交订单"
            android:textSize="@dimen/dp_16"
            android:textColor="@color/white"
            android:background="@drawable/divelog_shape_bg_gm"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

</LinearLayout>