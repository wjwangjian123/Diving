<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/Setting_bg"
    tools:context=".activity.SearchActivity">
    <com.example.edive.design.CommonTitle
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="搜索"
        app:canBack="true"
        app:backImage="@mipmap/icon_back"
        />
    <LinearLayout
        android:id="@+id/ll"
        android:padding="@dimen/dp_20"
        android:background="@color/bg_popo_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl"
            android:padding="@dimen/dp_10"
            android:layout_width="match_parent"
            android:background="@drawable/search_bg"
            android:layout_height="@dimen/dp_36">
            <ImageView
                android:id="@+id/iv_shuaixuan"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_shaixuan"
                />
            <TextView
                android:layout_marginLeft="@dimen/dp_15"
                android:id="@+id/tv_choess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:layout_toRightOf="@id/iv_shuaixuan"
                android:gravity="center_vertical"
                android:text="动态"
                android:drawableRight="@mipmap/icon_more_search"
                android:drawablePadding="@dimen/dp_10"
                />
            <EditText
                android:layout_marginLeft="@dimen/dp_20"
                android:id="@+id/et_search_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:maxLines="1"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/tv_choess"
                android:background="@null"
                android:hint="@string/search_import_content"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />
            <ImageView
                android:id="@+id/iv_delect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_quxiaos"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                />
        </RelativeLayout>

        </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_shopping"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_huati"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_search"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_diving"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_loct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_30"
            android:text="@string/sourch_history"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:textStyle="normal"
            tools:ignore="RtlHardcoded"/>
        <TextView
            android:id="@+id/tv_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_20"
            android:drawableLeft="@mipmap/icon_delete_search"
            android:text="@string/sourch_cancel_history"
            android:textColor="@color/wechatLogin"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal"
            android:drawablePadding="@dimen/dp_5"
            tools:ignore="RelativeOverlap,RtlHardcoded" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rec"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_below="@id/tv_loct"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>