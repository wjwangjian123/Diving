<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.TopicDetailsActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/colltb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:expandedTitleGravity="center"
            app:contentScrim="@color/Setting_bg"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_show"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_200"
                    android:src="@mipmap/bg"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="pin"
                    app:layout_collapseParallaxMultiplier="0.9"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@color/findpassword_bg"
                    android:orientation="vertical"
                    android:layout_gravity="bottom"
                    app:layout_collapseMode="pin"
                    app:layout_collapseParallaxMultiplier="0.7"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_topic_name"
                        android:layout_marginTop="@dimen/dp_37"
                        android:layout_marginLeft="@dimen/dp_28"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_20"
                        android:textColor="@color/white"
                        android:text="#话题名字#"
                        />
                    <TextView
                        android:id="@+id/tv_topic_num"
                        android:layout_marginTop="@dimen/dp_11"
                        android:layout_marginLeft="@dimen/dp_28"
                        android:layout_width="wrap_content"
                        android:layout_below="@id/tv_topic_name"
                        android:layout_height="wrap_content"
                        android:textColor="@color/like"
                        android:text="11800动态"
                        android:textSize="@dimen/sp_13"
                        />
                    <TextView
                        android:id="@+id/tv_topic_text"
                        android:layout_marginRight="@dimen/dp_45"
                        android:layout_marginTop="@dimen/dp_11"
                        android:layout_below="@id/tv_topic_num"
                        android:layout_marginLeft="@dimen/dp_28"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/like"
                        android:text="话题描述：Located less than a kilometer from times square, Hotel New York offers Complimentary WiFI and meeting and event spaces.YOBOT, the onsite luggage-storing robot, helps to keep your luggage secure"
                        android:textSize="@dimen/sp_12"
                        />
                    <View
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_below="@id/tv_topic_text"
                        android:layout_height="@dimen/dp_0_5"
                        android:background="@color/hint"
                        />
                    <ImageView
                        android:id="@+id/iv_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_sharetop"
                        android:layout_alignParentRight="true"
                        />
                    <ImageView
                        android:id="@+id/iv_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_shoucangtop"
                        android:visibility="gone"
                        android:layout_toLeftOf="@id/iv_share"
                        />
                    <ImageView
                        android:id="@+id/iv_nolike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_weiguanzhu"
                        android:layout_toLeftOf="@id/iv_share"
                        android:visibility="visible"
                        />
                </RelativeLayout>
            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:layout_marginTop="@dimen/dp_15"
                android:id="@+id/tb"
                android:layout_width="match_parent"
                app:layout_collapseMode="pin"
                android:layout_height="@dimen/dp_40">
                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="20dp"
                    android:src="@mipmap/icon_back"
                    />
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
        <android.support.design.widget.TabLayout
            android:id="@+id/tab"
            android:layout_width="match_parent"
            app:tabTextColor="@color/hint"
            app:tabSelectedTextColor="@color/white"
            app:tabBackground="@color/findpassword_bg"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_height="wrap_content"/>
    </android.support.design.widget.AppBarLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/vp"
                android:layout_width="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_height="match_parent"/>

</android.support.design.widget.CoordinatorLayout>