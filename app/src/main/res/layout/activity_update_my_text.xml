<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/Setting_bg"
    android:layout_height="match_parent"
    tools:context=".activity.UpdateMyTextActivity">
    <com.example.edive.design.CommonTitle
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:canBack="true"
        app:backImage="@mipmap/icon_back"
        app:titleText="修改个人信息"
        />
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/title"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/personal_data"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/white"
            android:text="个人简介"
            />
        <EditText
            android:id="@+id/et_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:background="@null"
            android:textColor="@color/white"
            android:maxLength="200"
            android:gravity="top"
            android:textColorHint="@color/hint"
            android:hint="个人简介"
            android:textSize="@dimen/sp_13"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            />
    </LinearLayout>
    <Button
        android:id="@+id/bt_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:layout_marginLeft="@dimen/sp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:text="确定"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>