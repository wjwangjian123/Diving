<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001128"
    android:orientation="vertical"
    tools:context=".activity.UpdatePasswordActivity">

    <com.example.edive.design.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        app:canBack="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/update_back"
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:src="@mipmap/icon_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/update_password_title"
                android:textColor="#ffffffff"
                android:textSize="18sp" />
        </RelativeLayout>
    </com.example.edive.design.CommonTitle>

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_355"
        android:layout_height="@dimen/dp_133"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        app:cardBackgroundColor="@color/cardview_bg_findpass_0F1F36"
        app:cardCornerRadius="@dimen/sp_5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--1行-->
            <ImageView
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_14"
                android:src="@mipmap/icon_mm" />
            <EditText
                android:id="@+id/update_ed_former_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_43"
                android:layout_marginTop="@dimen/dp_16"
                android:inputType="textPassword"

                android:background="@null"
                android:maxLines="1"
                android:hint="@string/update_et_former_password"
                android:textColor="@color/wechatLogin"
                android:textColorHint="@color/wechatLogin"
                android:textSize="@dimen/sp_14"
                android:textStyle="normal"
                tools:ignore="RtlHardcoded" />
            <!---->
            <View
                android:layout_width="@dimen/dp_350"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_44"
                android:layout_marginRight="@dimen/dp_20"
                android:background="#001128" />
            <!--2行-->
            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_59"
                android:src="@mipmap/icon_key" />

            <EditText
                android:id="@+id/update_ed_new_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_43"
                android:layout_marginTop="@dimen/dp_60"
                android:inputType="textPassword"

                android:background="@null"
                android:maxLines="1"
                android:hint="@string/update_et_new_password"
                android:textColor="@color/wechatLogin"
                android:textColorHint="@color/wechatLogin"
                android:textSize="@dimen/sp_14"
                android:textStyle="normal"
                tools:ignore="RtlHardcoded" />
            <!---->
            <View
                android:layout_width="@dimen/dp_350"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_89"
                android:layout_marginRight="@dimen/dp_20"
                android:background="#001128" />

            <!--3行  确认新密码-->
            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_103"
                android:src="@mipmap/icon_key" />
            <!--et与ed命名含义一样为输入-->
            <EditText
                android:id="@+id/update_ed_ok_new_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_43"
                android:layout_marginTop="@dimen/dp_104"

                android:background="@null"
                android:maxLines="1"
                android:inputType="textPassword"
                android:hint="@string/update_ok_new_pass"
                android:textColor="@color/wechatLogin"
                android:textColorHint="@color/wechatLogin"
                android:textSize="@dimen/sp_14"
                android:textStyle="normal"
                tools:ignore="RtlHardcoded" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <!--<TextView-->
    <!--android:id="@+id/update_ok_btn"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="center"-->
    <!--android:layout_marginTop="@dimen/dp_40"-->
    <!--android:background="@mipmap/button3"-->
    <!--android:gravity="center"-->
    <!--android:text="@string/update_ok_btn"-->
    <!--android:textColor="@color/ffffff" />-->

    <Button
        android:id="@+id/update_ok_btn"
        android:layout_width="@dimen/dp_305"
        android:layout_height="@dimen/dp_44"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_35"
        android:background="@drawable/shape"
        android:text="@string/update_ok_btn"
        android:textColor="@color/ffffff" />

</LinearLayout>