<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/Setting_bg"
    android:layout_height="match_parent"
    tools:context=".fragment.HomesFragment">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        app:elevation="0dp"
        android:layout_height="wrap_content">
    <LinearLayout
        app:layout_scrollFlags="scroll"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/Setting_bg"
        android:layout_height="wrap_content">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/ll"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_30"
            android:orientation="horizontal"
            app:layout_scrollFlags="scroll"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_reduction"
                android:layout_weight="1"
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_55"
                android:src="@mipmap/icon_hy"
                />
            <ImageView
                android:id="@+id/iv_integral"
                android:layout_weight="1"
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_55"
                android:src="@mipmap/icon_jf"
                />
            <ImageView
                android:id="@+id/iv_apply"
                android:layout_width="@dimen/dp_55"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_55"
                android:src="@mipmap/icon_sq"
                />
            <ImageView
                android:id="@+id/iv_divinglog"
                android:layout_width="@dimen/dp_55"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_55"
                android:src="@mipmap/icon_rz"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/ll"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            app:layout_scrollFlags="scroll"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="色彩还原"
                android:gravity="center"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/white"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/tv_jif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="积分好礼"
                android:gravity="center"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/white"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/tv_nero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="教练申请"
                android:gravity="center"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/white"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="潜水日志"
                android:gravity="center"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/white"
                android:layout_weight="1"
                />
        </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_marginTop="@dimen/dp_28"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_14"
        app:layout_scrollFlags="scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="话题分类"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            />
        <TextView
            android:id="@+id/tv_topic_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部 >"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/clolralls"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_class"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_below="@id/rl"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        <android.support.design.widget.TabLayout
            android:layout_marginTop="@dimen/dp_34"
            android:layout_below="@id/rec"
            app:tabTextAppearance="@style/TabLayoutTextStyle"
            android:id="@+id/home_tabs"
            app:tabTextColor="@color/clolratabs"
            app:tabSelectedTextColor="@color/white"
            android:layout_width="@dimen/dp_170"
            android:layout_height="@dimen/dp_35"
            />
    </LinearLayout>

    </android.support.design.widget.AppBarLayout>
    <android.support.v4.view.ViewPager
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:id="@+id/homevp"
        android:layout_below="@id/home_tabs"
        android:layout_width="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="match_parent" />
</android.support.design.widget.CoordinatorLayout>