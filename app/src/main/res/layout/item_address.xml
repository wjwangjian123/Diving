<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView app:cardCornerRadius="@dimen/dp_6"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/cardview_bg_conver"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/rl"
        android:padding="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:text="黎门"
            />
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/hintsssss"
            android:text="156609563858"
            android:layout_toRightOf="@id/tv_name"
            android:layout_marginLeft="@dimen/dp_20"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京市海淀区金澳国际28层"
            android:textColor="@color/hintsssss"
            android:layout_below="@id/tv_name"
            />
        <View
            android:id="@+id/view"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/hint_address"
            android:layout_below="@id/tv_address"
            />
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_below="@id/view"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:src="@mipmap/icon_okok"
                android:id="@+id/iv_moren"
                android:layout_centerVertical="true"
                android:visibility="gone"
                />
            <ImageView
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_onno"
                android:id="@+id/iv_nomoren"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设为默认"
                android:textColor="@color/hint"
                android:layout_marginLeft="@dimen/dp_20"
                />
            <TextView
                android:id="@+id/tv_delect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:drawableLeft="@mipmap/icon_delect"
                android:layout_alignParentRight="true"
                android:textColor="@color/hint"
                android:drawablePadding="@dimen/dp_8"
                />
            <TextView
                android:id="@+id/tv_bj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑"
                android:drawableLeft="@mipmap/icon_bj"
                android:textColor="@color/hint"
                android:drawablePadding="@dimen/dp_8"
                android:layout_toLeftOf="@id/tv_delect"
                android:layout_marginRight="@dimen/dp_15"
                />
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>