<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/dp_10"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_8">
<RelativeLayout
    android:id="@+id/rl"
    android:layout_width="wrap_content"
    android:padding="@dimen/dp_15"
    android:layout_height="wrap_content">

    <com.example.edive.design.RoundImage
        android:layout_marginLeft="@dimen/dp_5"
        android:id="@+id/iv_show"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:src="@mipmap/bg"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="-5dp"
        android:id="@+id/tv_co_dj"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="V3"
        android:layout_below="@id/iv_show"
        android:background="@drawable/person_inter_bg"
        android:textSize="@dimen/sp_10"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="蕾蕾"
        android:layout_below="@id/tv_co_dj"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
</android.support.v7.widget.CardView>