<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginTop="@dimen/dp_25"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.edive.design.RoundOrCircleImage
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_25"
            android:id="@+id/iv_photo"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:src="@mipmap/morentouxiang"
            />
        <TextView
            android:layout_toRightOf="@id/iv_photo"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_25"
            android:id="@+id/tv_pl_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/blue"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="wrap_content"
            android:textColor="@color/like"
            android:textSize="@dimen/sp_11"
            android:layout_marginTop="@dimen/dp_25"
            android:text="111111"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:layout_marginLeft="@dimen/dp_5"
            android:id="@+id/tv_pl_text"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/hint"
            android:layout_toRightOf="@id/iv_photo"
            android:layout_below="@id/tv_pl_name"
            android:layout_marginTop="@dimen/dp_5"
            android:lineSpacingExtra="@dimen/dp_10"
            android:text="111111111111111111"
            />
    </RelativeLayout>

    <View
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/hintcomment"
        android:layout_below="@id/rl"
        android:layout_marginTop="@dimen/dp_15"
        />
</RelativeLayout>