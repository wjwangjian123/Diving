<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_item"
        android:background="@drawable/coach_bg"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150">
        <TextView
            android:id="@+id/tv_apply_tk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_centerHorizontal="true"
            android:text="确认收货"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/blue"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_show"
            android:layout_width="@dimen/dp_85"
            android:src="@mipmap/bg"
            android:layout_height="@dimen/dp_85" />
        <TextView
            android:id="@+id/tv_text_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_140"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_14"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@id/iv_show"
            android:textColor="@color/white"
            android:text="商品名称"
            />
        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进行中"
            android:textColor="@color/color_dfk"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_12"
            />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_show"
            android:layout_alignBottom="@id/iv_show"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_20"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/dp_10"
            android:maxLines="1"
            android:text="数量：1"
            />
        <TextView
            android:id="@+id/tv_guige"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_11"
            android:layout_alignBottom="@id/tv_num"
            android:layout_toRightOf="@id/tv_num"
            android:layout_marginRight="@dimen/dp_20"
            android:text="规格：XL"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tv_jif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_show"
            android:layout_alignParentRight="true"
            android:textColor="@color/blue"
            android:text="-5000积分"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_one"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl"
        >
        <TextView
            android:id="@+id/tv_order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hint"
            android:textSize="@dimen/sp_12"
            />
    </RelativeLayout>
    <View
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/hint_oeder"
        android:layout_below="@id/rl_one"
        android:layout_marginTop="@dimen/dp_10"
        />
</RelativeLayout>