<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.edive.design.RoundOrCircleImage
            android:id="@+id/iv_show"
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_42"
            android:src="@mipmap/ic_launcher"
            />
        <TextView
            android:id="@+id/tv_yuan"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:background="@drawable/yuan"
            android:layout_marginLeft="@dimen/dp_35"
            />
        <TextView
            android:id="@+id/tv_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:layout_toRightOf="@id/iv_show"
            android:text="time"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_name"
            android:layout_marginTop="@dimen/dp_2"
            android:textColor="@color/like"
            android:textSize="@dimen/sp_12"
            android:text="评论了你"
            />
        <TextView
            android:id="@+id/tv_text"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/texte_like"
            android:textSize="@dimen/sp_13"
            android:layout_toRightOf="@id/iv_show"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_alignBottom="@id/iv_show"
            android:text="11111111111111"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/like"
            android:text="09-14 12:45"
            />
        <View
            android:layout_marginTop="@dimen/dp_6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_below="@id/tv_text"
            android:layout_toRightOf="@id/iv_show"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@color/hint_de"
            />
    </RelativeLayout>
</LinearLayout>