<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dp_5"
    app:cardBackgroundColor="@color/findpassword_bg"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.edive.design.RoundOrCircleImage
            android:id="@+id/iv_show"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:src="@mipmap/ic_launcher"
            />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_show"
            android:layout_marginLeft="@dimen/dp_12"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            android:text="汪汪汪"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/albumFontHint"
            android:layout_toRightOf="@id/iv_show"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_alignBottom="@id/iv_show"
            android:textSize="@dimen/sp_12"
            android:text="2019-09-30"
            />
        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:layout_toRightOf="@id/iv_show"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@id/tv_time"
            android:text="教练教得特别好，还帮我们拍了很多照片，实在是太喜欢了啊！"
            android:textColor="@color/white"
            android:lineSpacingExtra="@dimen/dp_4"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rec"
            android:layout_toRightOf="@id/iv_show"
            android:layout_below="@id/tv_text"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>