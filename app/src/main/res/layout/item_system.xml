<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_6"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/readssss"
        >
        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/iv"
                android:layout_width="@dimen/dp_21"
                android:layout_height="@dimen/dp_21"
                android:src="@mipmap/icon_xtxx"
                />
            <TextView
                android:id="@+id/tv_yuan"
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_6"
                android:background="@drawable/yuan"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_29"
                />
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_toRightOf="@id/iv"
                android:text="系统即将进行升级"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_alignBottom="@id/iv"
                android:textSize="@dimen/sp_15"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/like"
                android:textSize="@dimen/sp_12"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:text="09-14 12:45"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_text"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/like"
                android:layout_below="@id/iv"
                android:layout_marginBottom="@dimen/dp_12"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>