<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/Setting_bg"
    android:alpha="0.8"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/close"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_37"
            />
        <TextView
            android:id="@+id/tv_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photo"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:drawableTop="@mipmap/icon_zhaopian"
            android:drawablePadding="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_130"
            />
        <TextView
            android:id="@+id/tv_video"
            android:layout_below="@id/tv_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:drawableTop="@mipmap/icon_shipin"
            android:drawablePadding="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_49"
            />
        <TextView
            android:id="@+id/tv_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日志"
            android:textSize="@dimen/sp_14"
            android:layout_below="@id/tv_video"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:drawableTop="@mipmap/icon_rizhi"
            android:drawablePadding="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_49"
            />
    </RelativeLayout>
</LinearLayout>