<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Setting_bg"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_show"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_90"
                android:src="@mipmap/bg"
                android:scaleType="centerCrop"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_text"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="商品名称商品名称商品名称商品名称"
                android:layout_toRightOf="@id/iv_show"
                android:layout_marginLeft="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="库存 509"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/iv_show"
                android:textColor="@color/hint"
                android:layout_below="@id/tv_text"
                android:layout_marginTop="@dimen/dp_5"
                />
            <TextView
                android:id="@+id/tv_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textSize="@dimen/sp_19"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/iv_show"
                android:layout_alignBottom="@id/iv_show"
                android:text="2030积分"
                />
        </RelativeLayout>
        <TextView
            android:padding="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品规格"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            />
        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/id_flow"
            app:max_select="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
        </com.zhy.view.flowlayout.TagFlowLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兑换数量"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_14"
                />
            <ImageView
                android:id="@+id/iv_jia"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@mipmap/icon_jia"
                />
            <TextView
                android:id="@+id/tv_num_num"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/integral_inter_bg"
                android:drawablePadding="@dimen/dp_12"
                android:layout_toLeftOf="@id/iv_jia"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />
            <ImageView
                android:id="@+id/iv_jian"
                android:layout_width="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:layout_height="15dp"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_toLeftOf="@id/tv_num_num"
                android:src="@mipmap/icon_jian"
                />

        </RelativeLayout>

    </LinearLayout>


    <Button
        android:layout_margin="@dimen/dp_20"
        android:id="@+id/bt_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape"
        android:text="确定"
        android:textColor="@color/white" />
</RelativeLayout>