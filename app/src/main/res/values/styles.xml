<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="PopupAnimation">
            <item name="android:windowEnterAnimation">@anim/fade_in</item>
            <item name="android:windowExitAnimation">@anim/fade_out</item>
        </style>
    <style name="lib_style_text_size2" parent="lib_style_text">
        <item name="android:textSize">@dimen/sp_13</item>
    </style>
    <style name="lib_style_text" parent="lib_style_base">
        <item name="android:textColor">@color/grey_first</item>
    </style>
    <style name="lib_style_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Style_TextViewDialog" parent="Style_TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">#888888</item>
        <item name="android:textSize">16.0sp</item>
    </style>
    <style name="Style_TextView" parent="Style_TextViewDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/text_white_blue</item>
    </style>
    <style name="Style_TextViewDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Button_DialogConfirmNew" parent="Button_DialogDefault">
        <item name="android:background">#00000000</item>
        <item name="android:padding">12dip</item>
        <item name="android:textColor">@color/grey_second</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Button_DialogDefault" parent="ButtonWidth">
        <item name="android:layout_weight">1</item>
    </style>
    <style name="ButtonWidth" parent="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/sp_15</item>
    </style>

</resources>
